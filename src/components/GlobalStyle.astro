<style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    @layer components {
        nav {
            @apply bg-black;
        }
        nav a {
            padding: 0.1% 0.3% 0.05%;
            @apply font-mono bg-gradient-to-r hover:from-purple-500 hover:to-pink-500 hover:rounded-lg md:hover:animate-pulse flex;
        }
        nav a[selected=true] {
            padding: 0.1% 0.3% 0.05%;
            @apply font-mono bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex;
        }
    }
    h1 {
        @apply text-xl;
    }

    body {
        /* 20 px margin on the left and right and the top and bottom */
        @apply m-20;
        /* wrap text when horizontal space is limited */
        @apply break-words;
    }
</style>
